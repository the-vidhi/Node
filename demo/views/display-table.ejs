<%- include('header'); -%>

<% if(users.length>0) { %>
<body bgcolor="peach" align="center">
<table border="1" align="center" bgcolor="lightgreen">

        <tr>

                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Action</th>

        </tr>
 
      <% for(var i=0;i<users.length;i++){ %>
        <tr>

                <td><%= users[i].user_name %></td>
                <td><%= users[i].user_email %></td>
                <td><%= users[i].user_mobile %></td>
                <td>
                        <a href='edit/<%= users[i]._id  %>'>Edit</a> |    
                 
                        <a href='delete/<%= users[i]._id  %>'>Delete</a>
                </td>

        </tr>

        <% } %>      
             
</table>
</body>
<% } %>
 